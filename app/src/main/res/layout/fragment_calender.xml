<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/img_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/profile_item"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalender"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CalendarView
        android:id="@+id/calenderPick"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Filled"
        android:id="@+id/forScroll"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="400dp"
        android:layout_height="270dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/cardTextCalenderInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Details zum Arbeitstag:"
            android:textSize="18sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/cardTextStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:text="Startzeit:"
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/startTimeCalender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:gravity="end"
            android:text=""
            android:textSize="16sp" />


        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/cardTextEnde"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="30dp"
            android:text="Endzeit:"
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/endTimeCalender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_marginRight="40dp"
            android:gravity="end"
            android:text=""
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/cardTextHours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="30dp"
            android:text="Arbeitsstunden:"
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/hoursCalender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_marginRight="40dp"
            android:gravity="end"
            android:text=""
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/cardTextDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            android:text="Bemerkung:"
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/detailsCalender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_marginRight="40dp"
            android:gravity="end"
            android:text=""
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/cardTextDownload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="20dp"
            android:text="PDF-Dokument:"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="30dp"
            android:gravity="right">

            <Button
                android:id="@+id/pdfDownloadZeitraum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/forScroll"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>